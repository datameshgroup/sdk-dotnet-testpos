<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <Version>1.0.20</Version>
    <Authors>Clinton Dean</Authors>
    <Company>DataMesh Group</Company>
    <Product>SimplePOS</Product>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Fonts\fontawesome-webfont.ttf" />
    <None Remove="Images\CryptoDotCom.png" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Images\CryptoDotCom.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Resource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="DataMeshGroup.Fusion.FusionClient" Version="1.8.0-rc3" />
    <PackageReference Include="DataMeshGroup.Fusion.Pairing.WinForms" Version="1.1.5" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Fonts\fontawesome-webfont.ttf">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
  </ItemGroup>

</Project>
